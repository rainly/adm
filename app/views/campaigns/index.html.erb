<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Charge type</th>
    <th>Charge</th>
    <th>Order</th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%=h campaign.name %></td>
    <td><%=h campaign.start_date %></td>
    <td><%=h campaign.end_date %></td>
    <td><%=h campaign.charge_type %></td>
    <td><%=h campaign.charge_id %></td>
    <td><%=h campaign.order_id %></td>
    <td><%= link_to 'Show', campaign %></td>
    <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
    <td><%= link_to 'Destroy', campaign, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New campaign', new_campaign_path %>