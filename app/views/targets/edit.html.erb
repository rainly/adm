<h1>Editing target</h1>

<% form_for(@target) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :campaign_id %><br />
    <%= f.text_field :campaign_id %>
  </p>
  <p>
    <%= f.label :def_id %><br />
    <%= f.text_field :def_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

