<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Publisher info</th>
    <th>Category</th>
    <th>Owner</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%=h site.name %></td>
    <td><%=h site.publisher_info_id %></td>
    <td><%=h site.category_id %></td>
    <td><%=h site.owner_id %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site', new_site_path %>