<h1>Listing orders</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Advertiser</th>
    <th>Owner</th>
    <th>Status</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Referer</th>
    <th>Weight</th>
    <th>Comment</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.name %></td>
    <td><%=h order.advertiser_id %></td>
    <td><%=h order.owner_id %></td>
    <td><%=h order.status_id %></td>
    <td><%=h order.start_date %></td>
    <td><%=h order.end_date %></td>
    <td><%=h order.referer %></td>
    <td><%=h order.weight %></td>
    <td><%=h order.comment %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

